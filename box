<body>
	<div id= "myRect" style="border:50px solid black; transition: all 1s; width: 5px;
	" ></div>


	<input type="range" id="myPicker" min="30" max="1000">
	<div id="rangeValue"></div>
		<script>
			myPicker.onchange = function(){
				myRect.style.marginLeft = myPicker.value + "px";
				rangeValue.innerHTML = myPicker.value;
			}



		</script>


